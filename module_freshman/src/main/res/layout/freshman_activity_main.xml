<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.IndexActivity"
        android:background="#B4D6FF">
    <ImageView

            android:id="@+id/freshman_imageview3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:srcCompat="@drawable/sy"
            tools:srcCompat="@drawable/sy"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/sy_bottom"
            android:id="@+id/freshman_imageview4"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:adjustViewBounds="true" tools:srcCompat="@drawable/sy_bottom"/>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@+id/freshman_imageview3"
            app:layout_constraintBottom_toTopOf="@+id/freshman_imageview4"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp">
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_index"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </ScrollView>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/wantsay"
            android:id="@+id/freshman_show_image" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"
            android:visibility="invisible"
            tools:visibility="visible" android:layout_marginStart="12dp"/>
    <Button
            android:text="我知道啦"
            android:layout_width="130dp"
            android:layout_height="50dp" android:id="@+id/freshman_show_button"
            app:layout_constraintBottom_toBottomOf="@+id/freshman_show_image"
            app:layout_constraintEnd_toEndOf="@+id/freshman_show_image"
            app:layout_constraintStart_toStartOf="@+id/freshman_show_image" android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp" android:background="@drawable/freshman_bt_wantsay"
            app:layout_constraintTop_toTopOf="@+id/freshman_show_image" app:layout_constraintVertical_bias="1.0"
            android:layout_marginBottom="50dp" android:textSize="18sp" android:textColor="#FFFFFF"/>
    <TextView
            android:text="亲爱的你："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/freshman_showtext1" app:layout_constraintStart_toStartOf="@+id/freshman_show_image"
            android:layout_marginStart="32dp" android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="@+id/freshman_show_image" android:textSize="18sp"
            android:textColor="#333333"/>
    <TextView
            android:text="     恭喜你经过了高考的考验，与重邮结识。成为邮子的你，想必一定对这所位于巍巍南山上的 它倍感兴趣，在这里，我们将领你走入重邮，助你成功走上进入大学的第一步，帮助你解决从入学前到入学后的一系列可能遇到的问题。这里不仅有你感兴趣的校园宿舍食堂，还有祝你入学的人。更多的功能内容等你的探寻。在追寻梦想与 踏上人生新征程的同时，希望有我们的同行与帮助，各位萌新能够更快的适应这全新的生活。希望充满好奇心的你能够在大学找到自己的舞台，发挥更好的自己，努力学习，钻研学术，广交好友。探索更多重邮内容请关注“2019迎新网”，更多迎新活动请关注微信公众号“重邮小帮手”。"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/freshman_showtext2"

            android:lineSpacingMultiplier="1.5"

            app:layout_constraintStart_toStartOf="@+id/freshman_show_image"
            app:layout_constraintEnd_toEndOf="@+id/freshman_show_image"
            app:layout_constraintTop_toBottomOf="@+id/freshman_showtext1" android:textSize="15sp"
            android:layout_marginStart="40dp" android:layout_marginEnd="40dp" android:layout_marginTop="8dp"/>
    <TextView
            android:text="        期待与你的相遇"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/freshman_showtext3"
            app:layout_constraintTop_toBottomOf="@+id/freshman_showtext2"
            app:layout_constraintStart_toStartOf="@+id/freshman_showtext2" android:textSize="15sp"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="红岩网校工作站"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/freshman_showtext4" app:layout_constraintEnd_toEndOf="@+id/freshman_showtext2"
            app:layout_constraintBottom_toTopOf="@+id/freshman_show_button" android:layout_marginBottom="8dp"
            android:textColor="#333333" android:layout_marginEnd="8dp" android:textSize="15sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/freshman_college_num_bg"
                android:paddingLeft="19dp"
                android:paddingBottom="20dp"
                android:paddingRight="20dp"
>
    <TextView
            android:id="@+id/tv_route_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="江北机场"
            android:textColor="#333333"
            android:textSize="15sp"
            android:layout_marginTop="20dp"

    />
    <ImageView
            android:id="@+id/iv_Arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/freshman_ic_expand_more_black_24dp"/>

    <TextView
            android:id="@+id/tv_route_tip_one"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:text="路线一"
            android:textSize="13sp"
            android:layout_below="@id/tv_route_name"
            android:layout_marginTop="20dp"

    />

    <TextView
            android:id="@+id/tv_route_one"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="江北机场乘坐三号线→南坪站下车从5号出口出站
→乘坐346/347路公交车→乘坐346/347路公交车→"
            android:layout_below="@id/tv_route_tip_one"
            android:layout_marginTop="10dp"
    />

    <TextView
            android:id="@+id/tv_route_tip_two"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_route_one"
            android:layout_marginTop="16dp"
            android:text="路线二"
            android:textSize="13sp"
            android:visibility="gone"
    />
    <TextView
            android:id="@+id/tv_route_two"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_below="@id/tv_route_tip_two"
            android:layout_marginTop="10dp"
    />

</RelativeLayout>
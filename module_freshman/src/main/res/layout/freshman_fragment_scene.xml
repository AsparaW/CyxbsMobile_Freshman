<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EFF7FF"
            android:descendantFocusability="blocksDescendants"
    >

        <LinearLayout
                android:id="@+id/ll_map_viewparent"
                android:layout_width="match_parent"
                android:layout_height="255dp"
                android:layout_margin="15dp"
                android:background="@drawable/freshman_process_background"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="17dp"
                android:orientation="vertical"

        >
            <ImageView
                    android:id="@+id/iv_cqupt_map_2d"
                    android:layout_width="match_parent"
                    android:layout_height="164dp"
                    android:src="#3298"
                    android:scaleType="centerCrop"/>

            <TextView
                    android:id="@+id/tv_map_name"
                    android:layout_width="82dp"
                    android:layout_height="17dp"
                    android:text="重邮2D地图"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_marginTop="14dp"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="15dp"
                      android:text="重邮全景地图前往发现查看(发现→重邮地图)"
                      android:textSize="13sp"
                      android:layout_marginTop="8dp"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_school_photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:nestedScrollingEnabled="false"
        >
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
